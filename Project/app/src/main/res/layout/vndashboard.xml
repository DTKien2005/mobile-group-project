<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@android:color/white">

    <!-- Top AppBar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/purple_700"
        android:gravity="center_vertical"
        android:paddingStart="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Covid Dashboard"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <!-- NEW: Notification (bell) button -->
        <ImageButton
            android:id="@+id/btnNotify"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="12dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/app_name"
            android:padding="6dp"
            android:src="@android:drawable/ic_dialog_info"
            app:tint="@android:color/white" />
    </LinearLayout>

    <!-- Row of Navigation Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:weightSum="5">

        <Button
            android:id="@+id/btnHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:text="Home"
            android:drawableTop="@drawable/ic_home"
            android:drawablePadding="4dp"
            android:gravity="center"/>

        <Button
            android:id="@+id/btnSymptomChecker"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:drawableTop="@drawable/ic_health"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:text="Symptom Checker" />

        <Button
            android:id="@+id/btnTrend"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:text="Trends"
            android:drawableTop="@drawable/ic_trend"
            android:drawablePadding="4dp"
            android:gravity="center" />

        <Button
            android:id="@+id/btnVnVac"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:text="Vietnam Vaccine"
            android:drawableTop="@drawable/ic_flag_vn"
            android:drawablePadding="4dp"
            android:gravity="center"/>

        <Button
            android:id="@+id/btnWorldVac"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:text="World Vaccine"
            android:drawableTop="@drawable/ic_public"
            android:drawablePadding="4dp"
            android:gravity="center" />

        <Button
            android:id="@+id/btnVnVsWorld"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:text="Vietnam Vs World"
            android:drawableTop="@drawable/ic_compare"
            android:drawablePadding="4dp"
            android:gravity="center" />

        <Button
            android:id="@+id/btnSearch"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:text="Search"
            android:drawableTop="@drawable/ic_search"
            android:drawablePadding="4dp"
            android:gravity="center" />
    </LinearLayout>

    <!-- Fragment Container (for StatsFragment / SymptomCheckerActivity) -->
<!--    <FrameLayout-->
<!--        android:id="@+id/fragment_container"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="0dp"-->
<!--        android:layout_weight="1" />-->

    <!-- Swipe container -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>
